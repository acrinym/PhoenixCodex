<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GPTExporterIndexerAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GPTExporterIndexerAvalonia.Views.ChatFileManagementView"
             x:DataType="vm:ChatFileManagementViewModel">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📁 Chat File Management" 
                       FontSize="24" FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Manage chat files by removing duplicates, correcting dates, and organizing backups."
                       FontSize="14" Opacity="0.7"/>
        </StackPanel>

        <!-- Controls -->
        <Border Grid.Row="1" BorderBrush="Purple" BorderThickness="2" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Directory Selection -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Selected Directory:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding SelectedDirectory}" 
                             IsReadOnly="True" 
                             Watermark="No directory selected"
                             Margin="0,0,0,10"/>
                    
                    <!-- Options -->
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <CheckBox Content="Remove Duplicates" IsChecked="{Binding RemoveDuplicates}"/>
                        <CheckBox Content="Rename Files" IsChecked="{Binding RenameFiles}"/>
                        <CheckBox Content="Dry Run (Preview Only)" IsChecked="{Binding DryRun}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="10">
                    <Button Content="📁 Select Directory" 
                            Command="{Binding SelectDirectoryCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,8"/>
                    <Button Content="🔍 Analyze Directory" 
                            Command="{Binding AnalyzeDirectoryCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,8"/>
                    <Button Content="⚡ Execute Management" 
                            Command="{Binding ExecuteManagementCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,8"
                            IsEnabled="{Binding HasAnalyzedFiles}"/>
                    <Button Content="🗑️ Clear Results" 
                            Command="{Binding ClearResultsCommand}"
                            HorizontalAlignment="Stretch"
                            Padding="15,8"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress and Status -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Status}" Margin="0,0,0,10"/>
                
                <Grid IsVisible="{Binding IsOperationInProgress}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ProgressBar Grid.Row="0" Value="{Binding ProgressPercentage}" 
                                 Maximum="100" Height="20" Margin="0,0,0,5"/>
                    <TextBlock Grid.Row="1" Text="{Binding ProgressMessage}" 
                               FontWeight="SemiBold" Margin="0,0,0,2"/>
                    <TextBlock Grid.Row="2" Text="{Binding ProgressDetails}" 
                               Opacity="0.7" FontSize="12"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Results -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Analyzed Files -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                    Padding="10" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="📋 Analyzed Files" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ScrollViewer MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding AnalyzedFiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" 
                                            Padding="5" Margin="0,0,0,2">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding SuggestedFileName}" 
                                                       Opacity="0.7" FontSize="12"
                                                       IsVisible="{Binding SuggestedFileName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,0">
                                                <TextBlock Text="📅" IsVisible="{Binding IsBackupFile}"/>
                                                <TextBlock Text="🗑️" IsVisible="{Binding IsDuplicate}"/>
                                                <TextBlock Text="📝" IsVisible="{Binding SuggestedFileName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Preview Changes -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" 
                    Padding="10" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="👁️ Preview Changes" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <ScrollViewer MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding PreviewChanges}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" 
                                            Padding="5" Margin="0,0,0,2">
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 