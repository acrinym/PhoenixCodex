<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GPTExporterIndexerAvalonia.Views.Controls.SelectableTextBlock">
    <Grid>
        <ScrollViewer Name="ScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <TextBox Name="TextBlock"
                     Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionBrush="LightBlue"
                     SelectionForegroundBrush="Black"
                     CaretBrush="White"
                     IsUndoEnabled="False"
                     Focusable="True">
                <TextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Select All" Name="SelectAllMenuItem"/>
                        <MenuItem Header="Copy" Name="CopyMenuItem"/>
                        <MenuItem Header="Copy Selection" Name="CopySelectionMenuItem"/>
                        <Separator/>
                        <MenuItem Header="Increase Font Size" Name="IncreaseFontSizeMenuItem"/>
                        <MenuItem Header="Decrease Font Size" Name="DecreaseFontSizeMenuItem"/>
                        <MenuItem Header="Reset Font Size" Name="ResetFontSizeMenuItem"/>
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
        </ScrollViewer>
    </Grid>
</UserControl> 