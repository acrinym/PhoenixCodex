<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/avaloniaui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GPTExporterIndexerAvalonia.Views.Controls.SelectableTextBlock">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
            <Button Content="Copy All" Name="CopyAllButton" Margin="0,0,5,0"/>
            <Button Content="Copy Selection" Name="CopySelectionButton" Margin="0,0,5,0"/>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1" Name="ScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <TextBlock Name="TextBlock"
                       Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       TextWrapping="Wrap"/>
        </ScrollViewer>
    </Grid>
</UserControl> 